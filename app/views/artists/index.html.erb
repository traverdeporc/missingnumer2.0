<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container-fluid">
        <div class="row">
            <% @artists.each do |artist| %>
              
                <div class="col-xs-8 col-md-8 col-xs-offset-6 col-md-offset-8 artistbox">
                
                  <tr>
                  <td>Listing Artists</td>
                  <td><%= artist.name %></td>
                  <td><%= artist.surname %></td>
                  <td><%= artist.description %></td>
                  <td class="block"><%= link_to 'Show', artist %></td>
                  <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
                  <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <td class="block"><%= link_to 'New Artist', new_artist_path %></td>
                </tr>
              <% end %>
            </div>
      </div>
    </div>
   
  </tbody>
</table>

<br>
